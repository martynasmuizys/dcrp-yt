{
    "name": "dcrp-yt",
    "description": "Discord rich presence extension for Youtube.",
    "manifest_version": 3,
    "version": "1.1.2",
    "browser_specific_settings": {
        "gecko": {
            "id": "dcrp-yt@martynasmuizys",
            "update_url": "https://github.com/martynasmuizys/dcrp-yt/blob/main/updates.json"
        }
    },
    "action": {
        "default_title": "dcrp-yt",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["nativeMessaging", "tabs", "activeTab", "scripting", "storage"],
    "host_permissions": ["*://*.youtube.com/*"]
}
